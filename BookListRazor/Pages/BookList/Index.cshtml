@page
@model BookListRazor.Pages.BookList.IndexModel
@{
}


<br />
<div class="container row p-0 m-0">

    <div class="col-10">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-2">
        <a asp-page="Upsert" class="btn btn-info form-control text-white">Create New Book</a>
    </div>

    <br />

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped">
                    <tr class="table-secondary">
                        <th><label asp-for="Books.FirstOrDefault().Name"></label></th>
                        <th><label asp-for="Books.FirstOrDefault().Author"></label></th>
                        <th><label asp-for="Books.FirstOrDefault().ISBN"></label></th>
                        <td></td>
                    </tr>

                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Author</td>
                            <td>@item.ISBN</td>
                            <td>
                                <button onclick="return confirm('Are you sure to delete this record')" asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">Delete</button>
                                <a asp-page="Upsert" asp-route-id=@item.Id class="btn btn-primary text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <div class="col-12">No Books Found</div>
            }
        </form>

    </div>

    @* Second Modern Table *@
    <div class="col-12 text-center text-info">
        <h3>OR</h3>
    </div>

    <div class="col-12">
        <table id="DT_load" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>


</div>

@section Scripts{ 
<script src="~/js/bookList.js"></script>
}


